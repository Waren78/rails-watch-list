<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1>Save any kind of movies</h1>
    <p>Classic</p>
  </div>
</div>

<div class="container mt-3">
  <div class="d-flex justify-content-between">
    <h1>List</h1>
    <%= link_to "Create a Movie list", new_list_path, class:"btn btn-success  btn-lg rounded" %>
  </div>
  <% @lists.each do |list| %>
    <%= link_to list_path(list) do %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<% list.image %>)">
      <%=  list.name %>
    </div>
  <% end %>
</div>
